---
import Layout from '../../layouts/Layout.astro';

const { roomId } = Astro.params;
---

<Layout title="Room - Pantry Party">
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Room Header -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center justify-between mb-4">
          <h1 class="text-3xl font-bold text-gray-900">Room: {roomId}</h1>
          <div class="flex items-center gap-2">
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold" id="room-status">
              Draft
            </span>
          </div>
        </div>
        
        <div class="flex gap-2">
          <button
            id="share-room"
            class="text-sm text-primary-600 hover:text-primary-700 font-semibold"
          >
            ğŸ“‹ Copy Room Link
          </button>
        </div>
      </div>

      <!-- Ingredients Section -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">ğŸ¥— Ingredients</h2>
        
        <form id="add-ingredient-form" class="mb-6">
          <div class="flex gap-2">
            <input
              type="text"
              id="ingredient-input"
              placeholder="Add an ingredient..."
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
            <button
              type="submit"
              class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition font-semibold"
            >
              Add
            </button>
          </div>
        </form>

        <div id="ingredients-list" class="space-y-2">
          <!-- Ingredients will be rendered here -->
          <p class="text-gray-500 italic">No ingredients yet. Add some!</p>
        </div>
      </div>

      <!-- Recipes Section -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-900">ğŸ³ Generated Recipes</h2>
          <button
            id="generate-recipes"
            class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition font-semibold"
          >
            Generate Recipes
          </button>
        </div>

        <div id="recipes-list" class="space-y-4">
          <p class="text-gray-500 italic">No recipes yet. Add ingredients and generate!</p>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Participants -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold text-gray-900 mb-4">ğŸ‘¥ Participants</h3>
        <div id="participants-list" class="space-y-2">
          <div class="flex items-center gap-2 text-gray-700">
            <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            <span>Loading...</span>
          </div>
        </div>
      </div>

      <!-- Constraints -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold text-gray-900 mb-4">âš™ï¸ Constraints</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Allergies
            </label>
            <input
              type="text"
              id="allergies-input"
              placeholder="e.g., nuts, dairy"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Meal Type
            </label>
            <select
              id="meal-type-select"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
            >
              <option value="">Any</option>
              <option value="breakfast">Breakfast</option>
              <option value="lunch">Lunch</option>
              <option value="dinner">Dinner</option>
              <option value="snack">Snack</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Time Limit (mins)
            </label>
            <input
              type="number"
              id="time-limit-input"
              placeholder="e.g., 30"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
            />
          </div>

          <button
            id="update-constraints"
            class="w-full bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition text-sm font-semibold"
          >
            Update Constraints
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // This would integrate with Convex for real-time updates
  
  // Add ingredient
  document.getElementById('add-ingredient-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const input = document.getElementById('ingredient-input') as HTMLInputElement;
    if (input.value.trim()) {
      // TODO: Call Convex mutation
      console.log('Adding ingredient:', input.value);
      input.value = '';
    }
  });

  // Generate recipes
  document.getElementById('generate-recipes')?.addEventListener('click', () => {
    // TODO: Call Convex action
    console.log('Generating recipes...');
  });

  // Update constraints
  document.getElementById('update-constraints')?.addEventListener('click', () => {
    // TODO: Call Convex mutation
    console.log('Updating constraints...');
  });

  // Share room
  document.getElementById('share-room')?.addEventListener('click', () => {
    navigator.clipboard.writeText(window.location.href);
    alert('Room link copied to clipboard!');
  });
</script>
